<?xml version="1.0" encoding="utf-8"?>
<com.xiang.allin.view.BaseNetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/base_net"
    android:background="@mipmap/qq_bg"
    android:layout_height="match_parent"
    tools:context=".FirstPage.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="50dp"
                    android:layout_width="wrap_content"
                    android:text="账号:"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_mobile"
                    android:layout_width="match_parent"
                    android:minWidth="150dp"
                    android:layout_marginRight="50dp"
                    android:hint="请输入账号(手机号码)"
                    android:inputType="phone|number"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="50dp"
                    android:layout_width="wrap_content"
                    android:text="密码:"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/ed_pwd"
                    android:layout_width="match_parent"
                    android:minWidth="150dp"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:layout_marginRight="50dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_input"
            android:layout_marginTop="80dp"
            android:text="登录"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</com.xiang.allin.view.BaseNetLayout>